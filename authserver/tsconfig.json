{
  "compilerOptions": {
    "target": "ES2022", // Output JS for modern environments
    "module": "ES2022", // Use ES module system (import/export)
    "moduleResolution": "Bundler", // Use modern resolution like bundlers (e.g. Vite, Webpack)
    "outDir": "dist", // Put compiled JS into the dist/ folder
    "rootDir": "src", // Look for TS source files in src/
    "strict": true, // Enable strict type checking
    "skipLibCheck": true // Donâ€™t check type errors in node_modules
  },
  "include": [
    "src" // Only compile files in the src/ folder
  ]
}
